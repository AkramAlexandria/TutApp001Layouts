<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tutapp01layouts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityTabsLayout"></activity>
        <activity android:name=".ActivityFragmentLayout" />
        <activity android:name=".ActivityScrollLayout" />
        <activity android:name=".ActivityTableLayout" />
        <activity android:name=".ActivityRelativeLayout" />
        <activity android:name=".ActivityFrameLayout" />
        <activity android:name=".ActivityLinearLayout" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>