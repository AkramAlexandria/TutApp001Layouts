<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRelativeLayout">

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#4FC3F7"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:text="Hello"
        android:layout_centerInParent="true"
        android:id="@+id/btn01"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="#0288D1"
        android:text=""
        android:layout_alignRight="@id/btn01"
        android:layout_above="@id/btn01"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="#0288D1"
        android:text=""
        android:layout_alignLeft="@id/btn01"
        android:layout_below="@id/btn01"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="#0288D1"
        android:text=""
        android:layout_alignTop="@id/btn01"
        android:layout_toLeftOf="@id/btn01"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="#0288D1"
        android:text=""
        android:layout_alignBottom="@id/btn01"
        android:layout_toRightOf="@id/btn01"/>

</RelativeLayout>